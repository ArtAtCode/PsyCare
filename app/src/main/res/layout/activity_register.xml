<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity" >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/backtologin_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="返回登录"
            app:layout_constraintEnd_toEndOf="@+id/register_register"
            app:layout_constraintStart_toStartOf="@+id/register_register"
            app:layout_constraintTop_toBottomOf="@+id/register_register" />

        <Button
            android:id="@+id/register_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="注  册"
            android:textColor="#29ABE2"
            android:textSize="18sp"
            android:background="@drawable/my_button"
            app:layout_constraintEnd_toEndOf="@+id/confirmpassword_reigster"
            app:layout_constraintStart_toStartOf="@+id/confirmpassword_reigster"
            app:layout_constraintTop_toBottomOf="@+id/acceptserver_register" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:text="服务条款"
            android:textColor="#0071BC"
            app:layout_constraintBottom_toBottomOf="@+id/acceptserver_register"
            app:layout_constraintStart_toEndOf="@+id/acceptserver_register"
            app:layout_constraintTop_toTopOf="@+id/acceptserver_register" />

        <CheckBox
            android:id="@+id/acceptserver_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="阅读并同意"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <CheckBox
            android:id="@+id/night_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="晚"
            app:layout_constraintBottom_toBottomOf="@+id/noon_reigster"
            app:layout_constraintStart_toEndOf="@+id/noon_reigster"
            app:layout_constraintTop_toTopOf="@+id/noon_reigster" />

        <CheckBox
            android:id="@+id/noon_reigster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="中"
            app:layout_constraintBottom_toBottomOf="@+id/morning_register"
            app:layout_constraintStart_toEndOf="@+id/morning_register"
            app:layout_constraintTop_toTopOf="@+id/morning_register" />

        <CheckBox
            android:id="@+id/morning_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="早"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="录音时段"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Spinner
            android:id="@+id/day_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/month_register"
            app:layout_constraintStart_toEndOf="@+id/month_register"
            app:layout_constraintTop_toTopOf="@+id/month_register" />

        <Spinner
            android:id="@+id/month_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/year_register"
            app:layout_constraintStart_toEndOf="@+id/year_register"
            app:layout_constraintTop_toTopOf="@+id/year_register" />

        <Spinner
            android:id="@+id/year_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="出生日期"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Spinner
            android:id="@+id/sex_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="性别"
            app:layout_constraintStart_toStartOf="@+id/confirmpassword_reigster"
            app:layout_constraintTop_toBottomOf="@+id/confirmpassword_reigster" />

        <EditText
            android:id="@+id/confirmpassword_reigster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="确认密码"
            app:layout_constraintEnd_toEndOf="@+id/password_register"
            app:layout_constraintStart_toStartOf="@+id/password_register"
            app:layout_constraintTop_toBottomOf="@+id/password_register" />

        <EditText
            android:id="@+id/password_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="密码"
            app:layout_constraintEnd_toEndOf="@+id/verifycode_register"
            app:layout_constraintStart_toStartOf="@+id/verifycode_register"
            app:layout_constraintTop_toBottomOf="@+id/verifycode_register" />

        <EditText
            android:id="@+id/verifycode_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="验证码"
            app:layout_constraintEnd_toEndOf="@+id/phoneNum_register"
            app:layout_constraintStart_toStartOf="@+id/phoneNum_register"
            app:layout_constraintTop_toBottomOf="@+id/phoneNum_register" />

        <Button
            android:id="@+id/getcode_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="4dp"
            android:background="#A7D5EA"
            android:text="获取验证码"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/phoneNum_register"
            app:layout_constraintEnd_toEndOf="@+id/phoneNum_register"
            app:layout_constraintTop_toTopOf="@+id/phoneNum_register" />

        <EditText
            android:id="@+id/phoneNum_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="手机号"
            app:layout_constraintEnd_toEndOf="@+id/nickname_register"
            app:layout_constraintStart_toStartOf="@+id/nickname_register"
            app:layout_constraintTop_toBottomOf="@+id/nickname_register" />

        <EditText
            android:id="@+id/nickname_register"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginEnd="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="昵称"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#47A9D5">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注 册"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>